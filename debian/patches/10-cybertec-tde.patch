+	else if (key_length == 24)
+		cipher = !buffile ? EVP_aes_192_ctr() : EVP_aes_192_cbc();
+	else if (key_length == 32)
+		cipher = !buffile ? EVP_aes_256_ctr() : EVP_aes_256_cbc();
