+			  XLogRecPtr lsn, BlockNumber block,
+			  EncryptedDataKind data_kind)
+{
+#ifdef USE_ENCRYPTION
+	EVP_CIPHER_CTX *ctx;
+	int			out_size;
+	char	tweak_loc[TWEAK_SIZE];
+
+	Assert(data_encrypted);
+
