+		/*
+		 * If the file is not there, caller should be able to handle the
+		 * condition on his own.
+		 */
+		if (errno == ENOENT)
+			return NULL;
+
+		ereport(elevel,
+				(errcode_for_file_access(),
+				 errmsg("could not open file \"%s\": %m", path)));
